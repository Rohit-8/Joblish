PORT=4000

# For your Podman mongo container with auth (root/pass) and database 'joblish'
# If the container exposes 27017 locally, use localhost. If running inside other containers, use host.docker.internal or network alias.
MONGO_URI=mongodb://root:pass@localhost:27017/joblish?authSource=admin

# Redis container (exposed at 6379 on host)
REDIS_HOST=localhost
REDIS_PORT=6379

# Queue/workers
QUEUE_CONCURRENCY=5
IMPORT_BATCH_SIZE=50

LOG_LEVEL=info
ENABLE_SSE=true

# Optional overrides
# FEED_URLS=comma,separated,override
# RUN_CRON=0 * * * *
